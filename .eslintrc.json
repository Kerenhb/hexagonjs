{
  "extends": [
    "airbnb-base"
  ],
  "env": {
    "node": true,
    "mocha": true,
    "browser": true
  },
  "rules": {
    "import/no-extraneous-dependencies": [
      "error", {
        "devDependencies": [
          "**/*.spec.js",
          "**/spec.js",
          "rollup.config.js"
        ]
      }
    ],
    "import/prefer-default-export": [
      "warn"
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".coffee"
        ],
        "moduleDirectory": [
          "node_modules",
          "src",
          "."
        ]
      }
    }
  }
}
