        @link-border-hover-col: $link-col
        @link-border-selected-col: $action-body-col
        @link-text-col: $text-col
        @link-text-hover-col: $link-col
        @linkbar-background-col: $linkbar-background-col
        @linkbar-height: 40px
        @mobile-view-icons-background-col: lighten($default-background-col, 5%)
        @mobile-view-icons-text-col: $header-text-col
        @mobile-view-icons-text-hover-col: $header-text-col

