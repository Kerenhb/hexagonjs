        @titlebar-context-icon-hover-col: $context-faint-icon-hover-col
        @titlebar-menu-context-border-col: transparent
        @titlebar-menu-context-text-col: white
        @titlebar-text-col: $header-text-col

        @title-text-col: $accent-col

    @toggle-button
      @variables
        @action-col: $action-col
        @complement-col: $complement-col
        @contrast-col: $contrast-col
        @default-col: $default-col
        @info-col: $info-col
        @negative-col: $negative-col
        @positive-col: $positive-col
        @warning-col: $warning-col

    @tree
      @variables
        @background-col: $container-background-col
        @icon-background-col: $accent-col
