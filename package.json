{
  "name": "hexagon-js",
  "version": "1.10.0",
  "description": "A modular, themeable collection of components for modern browsers",
  "author": "James Smyth <james.smyth@ocado.com>",
  "contributors": [
    "Charlie Frater <charlie.frater@ocado.com>"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ocadotechnology/hexagonjs.git"
  },
  "bugs": {
    "url": "https://github.com/ocadotechnology/hexagonjs/issues"
  },
  "homepage": "https://hexagonjs.io",
  "engines": {
    "node": ">=0.12 <7.0.0"
  },
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel start:*",
    "start:browser-test-runner": "browser-test-runner watch test",
    "start:webpack": "webpack --config=webpack.test.config.js --progress --watch",
    "build-tests": "webpack --config=webpack.test.config.js --progress",
    "dist": "node build/main/dist.js",
    "test": "npm run build-tests && browser-test-runner run test/index.html",
    "upload-coverage": "cat coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "dependencies": {
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.5.0",
    "coffee-loader": "^0.7.2",
    "webpack": "^1.13.2"
  },
  "devDependencies": {
    "browser-test-runner": "^0.4.0",
    "chai": "^3.3.0",
    "chai-as-promised": "^5.1.0",
    "chai-spies": "^0.7.1",
    "coveralls": "^2.11.6",
    "ibrik-instrumenter-loader": "^0.1.1",
    "isparta-loader": "^2.0.0",
    "mocha": "^2.4.5",
    "npm-run-all": "^3.1.0",
    "phantomjs": "^1.0.0",
    "sinon": "^1.17.1"
  }
}
