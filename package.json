{
  "name": "hexagon-js",
  "version": "1.10.0",
  "description": "A modular, themeable collection of components for modern browsers",
  "author": "James Smyth <james.smyth@ocado.com>",
  "contributors": [
    "Charlie Frater <charlie.frater@ocado.com>"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ocadotechnology/hexagonjs.git"
  },
  "bugs": {
    "url": "https://github.com/ocadotechnology/hexagonjs/issues"
  },
  "homepage": "https://hexagonjs.io",
  "engines": {
    "node": ">=4.0.0"
  },
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel watch:*",
    "watch:browser-test-runner": "browser-test-runner watch test",
    "watch:lib-js": "rollup -w -c rollup.config.js",
    "watch:lib-css": "postcss modules/hexagon.css -w -c postcss.config.js -o target/hexagon.css",
    "watch:tests": "rollup -w -c rollup.config.test.js",
    "watch:tests-with-coverage": "rollup -w -c rollup.config.test.coverage.js",
    "watch:demo-js": "rollup -w -c rollup.config.demo.js",
    "watch:demo-html": "cpx -w demo-new/index.html target",
    "build:lib-js": "rollup -c rollup.config.js",
    "build:lib-css": "postcss modules/hexagon.css -c postcss.config.js -o target/hexagon.css",
    "build:tests": "rollup -c rollup.config.test.js",
    "build:tests-no-coverage": "rollup -c rollup.config.test.nocoverage.js",
    "build:demo-js": "rollup -c rollup.config.demo.js",
    "build:demo-html": "cpx demo-new/index.html target",
    "dist": "node build/main/dist.js",
    "test": "npm run test-phantomjs",
    "test-saucelabs": "npm run build:tests && npm run run-tests-saucelabs",
    "test-phantomjs": "npm run build:tests && npm run run-local-tests:phantomjs",
    "test-chrome": "npm run build:tests && npm run run-local-tests:chrome",
    "test-firefox": "npm run build:tests && npm run run-local-tests:firefox",
    "test-safari": "npm run build:tests && npm run run-local-tests:safari",
    "test-all": "npm run build:tests && npm-run-all run-local-tests:*",
    "run-local-tests:phantomjs": "browser-test-runner phantomjs 'test/index.html'",
    "run-local-tests:chrome": "browser-test-runner chrome 'test/index.html'",
    "run-local-tests:safari": "browser-test-runner safari 'test/index.html'",
    "run-local-tests:firefox": "browser-test-runner firefox 'test/index.html'",
    "run-tests-saucelabs": "browser-test-runner saucelabs 'test/index.html'",
    "upload-coverage": "cat coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "lint": "eslint 'modules/**/*.js'",
    "fix-lint-issues": "eslint --fix 'modules/**/*.js'"
  },
  "devDependencies": {
    "browser-test-runner": "^0.5.0",
    "chai": "^3.3.0",
    "chai-as-promised": "^5.1.0",
    "chai-spies": "^0.7.1",
    "coffee-script": "^1.12.3",
    "coveralls": "^2.11.6",
    "eslint": "^3.3.1",
    "eslint-config-standard": "^6.0.0-beta.3",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.0",
    "mocha": "^2.4.5",
    "npm-run-all": "^3.1.0",
    "phantomjs-prebuilt": "^2.0.0",
    "postcss": "^5.2.6",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.0.0",
    "rollup": "^0.41.4",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-coffee-script": "^1.1.0",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-includepaths": "^0.1.8",
    "rollup-plugin-istanbul": "^1.1.0",
    "rollup-plugin-progress": "^0.2.1",
    "rollup-pluginutils": "^2.0.1",
    "sinon": "^1.17.1"
  },
  "dependencies": {
    "cpx": "^1.5.0",
    "rollup-plugin-json": "^2.1.0"
  }
}
