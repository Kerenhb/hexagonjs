@module error-pages

  @option shadow-col
    @type color
    @description: The color of the shadow
    @default: rgba(0, 0, 0, 0.05)

  @option background-col
    @type color
    @description: The background color of the error message section.
    @default: #FFFFFF

  @option heading-text-col
    @type color
    @description: The color of the heading text
    @default: #3D3D3D