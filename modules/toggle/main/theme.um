@module toggle
  @option background-off-col
    @description: The background color of the toggle when off
    @default: #D5D5D5;
  @option background-on-col
    @description: The background color of the toggle when on
    @default: #D5D5D5;
  @option toggle-off-col
    @description: The color of the toggle marker when off
    @default: #ABABAB
  @option toggle-on-col
    @description: The color of the toggle marker when on
    @default: #B2BA32